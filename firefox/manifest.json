{
  "manifest_version": 2,

  "name": "TicketWatch",
  "version": "2018.10.31",
  "description": "Open Links, Bookmarks, Pages and TicketWatch in sidebar",

  "icons": {
      "48": "icons/mojogear48.png",
      "96": "icons/mojogear96.png"
  },

  "applications": {
    "gecko": {
      "id": "mojo-sidebar@example.com",
      "strict_min_version": "60.0",
      "update_url": "https://example.com/addons/tw_addon_updates.json"
    }
  },

  "browser_action": {
    "default_icon": "icons/mojogear32.png",
    "default_title": "TicketWatch"
  },

  "sidebar_action": {
    "default_title": "Mojo Sidebar",
    "default_panel": "sidebar/index.html",
    "open_at_install": false,
    "browser_style": false
  },

  "background": {
    "scripts": ["sidebar/index.js"]
  },

  "permissions": ["storage", "tabs", "menus", "bookmarks"]
}
